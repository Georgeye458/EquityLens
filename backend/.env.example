# EquityLens Backend Environment Variables
# Copy this file to .env and fill in the values

# SCX.ai API Configuration (Southern Cross AI)
SCX_API_KEY=your-scx-api-key-here
SCX_API_BASE_URL=https://api.scx.ai/v1
SCX_MODEL=DeepSeek-R1-0528
SCX_EMBEDDING_MODEL=E5-Mistral-7B-Instruct

# Database (PostgreSQL with pgvector extension)
DATABASE_URL=postgresql://username:password@localhost:5432/equitylens

# Application Settings
DEBUG=true
SECRET_KEY=change-me-in-production
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Document Processing Limits
MAX_FILE_SIZE_MB=30
MAX_PAGES=150
CHUNK_SIZE=800
CHUNK_OVERLAP=150
